<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Method calistirma">

    <!-- Methodlari secerken,bir class icerisindeki ozellikle calistirilacak methodlari
    ifade etmek istersek include
    ozellikle calistirilmayacak methodlari ifade etmek istersek exclude kullaniriz
    -->

    <test name="Belirli methodlari calistirma">
        <classes>
            <class name="tests.day15.C04_NegativeLoginTesti">
                <methods>
                    <include name="yanlisEmailtesti"></include>
                </methods>
            </class>
            <class name="tests.day16_SmokeTest.C02_NegatifLoginTesti">
                <methods>
                    <exclude name="yanlisEmailTesti"></exclude>
                </methods>
            </class>
        </classes>














    </test>








</suite>